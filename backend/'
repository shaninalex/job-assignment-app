from typing import Optional

from sqlalchemy import select
from sqlalchemy.ext.asyncio import AsyncSession

from app.models import Candidate
from app.pkg.repositories.base import BaseRepository


class CandidateRepository(BaseRepository[Candidate]):
    def __init__(self, session: AsyncSession):
        super().__init__(Candidate, session)

    async def get_by_username(self, username: str) -> Optional[Candidate]:
        stmt = select(Candidate).where(Candidate.username == username)
        result = await self.session.execute(stmt)
        return result.scalars().first()
